{
    "name": "simpod/graphql-request-factory",
    "description": "Factory to create PSR-7 compatible request to GraphQL server",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SimPod\\GraphQLRequestFactory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\GraphQLRequestFactory\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0 || ^2.0",
        "thecodingmachine/safe": "^1.0.2 || ^2"
    },
    "require-dev": {
        "doctrine/coding-standard": "^13.0",
        "infection/infection": "^0.29.0",
        "nyholm/psr7": "^1.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^2.0.0",
        "phpstan/phpstan-phpunit": "^2.0.0",
        "phpstan/phpstan-strict-rules": "^2.0.0",
        "phpunit/phpunit": "^11.4",
        "simpod/php-coveralls-mirror": "^3.0"
    }
}
